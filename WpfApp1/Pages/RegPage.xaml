<Page x:Class="WpfApp1.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="900"
      Title="RegPage">

    <Grid Background="White">
      
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Регистрация" Margin="30" FontSize="25" HorizontalAlignment="Center"></TextBlock>
            <Label Content="Имя:"></Label>
            <TextBox x:Name="NameTextBox"></TextBox>
            <Label Content="Логин:"></Label>
            <TextBox x:Name="LoginTextBox"></TextBox>
            <Label Content="Пароль:"></Label>
            <PasswordBox x:Name="PasswordBox"></PasswordBox>
            <Label Content="Роль:"></Label>
            <ComboBox x:Name="RoleComboBox" >
                <ComboBoxItem Content="Администратор"/>
                <ComboBoxItem Content="Пользователь"/>
            </ComboBox>
            <Button x:Name="RegButton" Content="Зарегистрироваться" Click="RegButton_Click" Margin="10" ></Button>
        </StackPanel>
        
    </Grid>
</Page>
